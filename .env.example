# Node.js
NODE_ENV=development
PORT=3000

# Database
# SECURITY: Use strong, unique passwords in production
DATABASE_URL=postgresql://jarvis:CHANGE_ME_TO_SECURE_PASSWORD@localhost:5432/jarvis_db
POSTGRES_USER=jarvis
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=jarvis_db

# Redis
# SECURITY: Redis requires authentication in production
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@localhost:6379/0
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
# SECURITY: Optional - encrypt cached data at rest (32+ chars, generate with: openssl rand -base64 32)
REDIS_ENCRYPTION_KEY=

# LM Studio
LM_STUDIO_URL=http://localhost:5000
LM_STUDIO_TIMEOUT=10000

# Evolution API (WhatsApp)
# SECURITY: These are REQUIRED - obtain from Evolution API dashboard
EVOLUTION_API_URL=https://evo.aslan.ma
EVOLUTION_API_KEY=CHANGE_ME_REQUIRED_EVOLUTION_KEY
EVOLUTION_WEBHOOK_SECRET=CHANGE_ME_REQUIRED_WEBHOOK_SECRET

# Resend Email
# SECURITY: Required for email functionality
RESEND_API_KEY=CHANGE_ME_REQUIRED_RESEND_KEY
RESEND_FROM_EMAIL=noreply@tktm.ma
RESEND_ADMIN_EMAIL=admin@tktm.ma

# Admin Dashboard
DASHBOARD_URL=https://admin.tktm.ma
# SECURITY: Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=https://admin.tktm.ma
# SECURITY: REQUIRED - generate with: openssl rand -base64 32
SESSION_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32
# SECURITY: REQUIRED - must be at least 32 characters, generate with: openssl rand -base64 48
JWT_SECRET=CHANGE_ME_MINIMUM_32_CHARS_GENERATE_WITH_OPENSSL
JWT_EXPIRY=86400

# D2D Portal (for Playwright)
D2D_PORTAL_URL=https://d2d.orange.ma
# SECURITY: Required for CRM integration
D2D_USERNAME=CHANGE_ME_D2D_USERNAME
D2D_PASSWORD=CHANGE_ME_D2D_PASSWORD

# Logging & Monitoring
LOG_LEVEL=info
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Cache TTL (seconds)
CACHE_TTL_CRM=300

# Metrics Endpoints
# SECURITY: Set to 'false' only for internal/trusted networks (e.g., Kubernetes internal)
METRICS_AUTH_REQUIRED=true
# SECURITY: Optional API key for Prometheus/monitoring tools (if set, can be used instead of JWT)
METRICS_API_KEY=
